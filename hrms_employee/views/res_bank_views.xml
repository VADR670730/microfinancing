<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="res_bank_inherited_form_view" model="ir.ui.view">
            <field name="name">res.bank.form.inherited</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="description"/>
                </xpath>
                <xpath expr="//field[@name='bic']" position="before">
                    <field name="abbreviation"/>
                    <field name="location"/>
                    <field name="bank_manager"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="res_bank_inherited_tree_view" model="ir.ui.view">
            <field name="name">res.bank.tree.inherited</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bic']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='country']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="location"/>
                    <field name="bank_manager"/>
                </xpath>
            </field>
        </record>


        <record id="base.view_partner_bank_tree" model="ir.ui.view">
            <field name="name">res.partner.bank.tree</field>
            <field name="model">res.partner.bank</field>
            <field name="arch" type="xml">
                <tree string="Bank Accounts">
                    <field name="sequence" invisible="1"/>
                    <field name="partner_id"/>
                    <field name="acc_number"/>
                    <field name="bank_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="base.view_partner_bank_search" model="ir.ui.view">
            <field name="name">res.partner.bank.search</field>
            <field name="model">res.partner.bank</field>
            <field name="arch" type="xml">
                <search string="Bank Accounts">
                    <!--<field name="company_id" invisible="context.get('company_hide', True)"/>-->
                    <field name="partner_id"/>
                    <field name="bank_name" filter_domain="['|', ('bank_name','ilike',self), ('acc_number','ilike',self)]" string="Bank Name"/>
                </search>
            </field>
        </record>

        <record id="view_partner_bank_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.bank.form.inherit</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
             <field name="arch" type="xml">
                 <xpath expr="//field[@name='bank_id']" position="after">
                     <field name="company_use"/>
                 </xpath>
             </field>
        </record>
    </data>
</odoo>