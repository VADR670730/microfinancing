<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Hr Job-->

        <record id="hr_job_custom_form" model="ir.ui.view">
            <field name="name">hr.job.form</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr_recruitment.hr_job_survey"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='address_id']" position="after">
                    <field name="is_manager"/>
                    <field name="is_supervisor"/>
                </xpath>
                <xpath expr="//group/field[@name='no_of_recruitment']" position="after">
                    <field name="emp_classification_id" options="{'no_create':True}"/>
                    <field name="default_user_id" readonly="True"/>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="hr_job_inherited_form" model="ir.ui.view">
            <field name="name">hr.job.inherited.form2</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='set_open']" position="after">
                    <button name="create_template_user" string="Set Template User(s)" type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='no_of_recruitment']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group" position="after">
                    <notebook>
                        <page string="Head Count (For HR)" groups="hrms_employee.group_hr_personnel">
                            <field name="compensatory_line" nolabel="1" mode="tree">
                                <tree editable="bottom">
                                    <field name="job_id" invisible="1"/>
                                    <field name="company_id" options="{'no_create':True}" required="1"/>
                                    <field name="percentage" required="1"/>
                                    <field name="active" required="1"/>
                                </tree>
                            </field>
                        </page>
                        <!--<page string="For Allocation (For Payroll)" groups="hr_payroll.group_hr_payroll_user,hr_payroll.group_hr_payroll_manager">-->
                           <!--<field name="allocation_compensation">-->
                               <!--<tree editable="top">-->
                                   <!--<field name="company_ids" options="{'no_create':True}" required="1"/>-->
                                   <!--<field name="shared" required="1"/>-->
                                   <!--<field name="date_effect" required="1"/>-->
                               <!--</tree>-->
                           <!--</field>-->
                       <!--</page>-->
                        <page string="For Manpower Plan" groups="hrms_employee.group_hr_personnel">
                            <field name="hr_job_count_ids" nolabel="1" mode="tree">
                                <tree editable="bottom">
                                    <field name="job_id" invisible="1"/>
                                    <field name="type" required="1"/>
                                    <field name="percentage" required="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Personnel Requisition Form(s)" groups="hrms_employee.group_hr_personnel">
                            <field name="address_id_abbr" invisible="1"/>
                            <field name="recruit_request_line" nolabel="1" mode="tree">
                                <tree string="Job Request" editable="bottom">
                                    <field name="job_id" invisible="1"/>
                                    <field name="department_id"/>
                                    <field name="company_id"/>
                                    <field name="no_of_recruitment"/>
                                    <field name="no_of_applications" readonly="1"/>
                                    <field name="no_of_hired_employee" readonly="1"/>
                                    <field name="date_request"/>
                                    <field name="requester_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="History" groups="hrms_employee.group_hr_personnel">
                            <field name="history_ids" nolabel="1" mode="tree">
                                <tree string="History" create="false" delete="false">
                                    <field name="job_id" invisible="1"/>
                                    <field name="recruitment_date"/>
                                    <field name="no_of_recruitment"/>
                                    <field name="no_of_hired_employee"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

        <record id="hr_job_custom_tree" model="ir.ui.view">
            <field name="name">hr.job.tree</field>
            <field name="model">hr.job</field>
            <field name="arch" type="xml">
                <tree string="Hr Job">
                    <field name="name"/>
                    <field name="address_id"/>
                    <field name="no_of_employee"/>
                    <field name="no_of_recruitment"/>
                    <field name="expected_employees"/>
                    <field name="no_of_hired_employee" invisible="1"/>
                    <field name="state"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="custom_action_hr_job" model="ir.actions.act_window">
            <field name="name">Job Positions</field>
            <field name="res_model">hr.job</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr_job_custom_tree"/>
        </record>

        <menuitem id="custom_menu_hr_job_position" action="custom_action_hr_job"
                  parent="hr.menu_human_resources_configuration"/>

        <!--HR Department-->

        <record id="hr.open_module_tree_department" model="ir.actions.act_window">
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <record id="hr_department_view_form" model="ir.ui.view">
            <field name="name">hr.department.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="replace"/>
                <xpath expr="//div[@name='button_box']" position="after">
                    <div class="oe_title">
                        <label for="name" string="Department Name"/>
                        <h2><field name="name"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id" options="{'no_create':True}"/>
                            <field name="company_id" options="{'no_create':True}"/>
                            <field name="inter_company_id" options="{'no_create':True}" domain="[('parent_id', '=', company_id)]"/>
                            <field name="is_branch"/>
                            <field name="branch_id" options="{'no_create':True}" attrs="{'invisible':[('is_branch','!=',True)]}" widget="selection"/>
                            <field name="is_operation"/>
                            <field name="municipality_id" options="{'no_create':True}"/>
                            <field name="area_id" options="{'no_create':True}"/>
                        </group>
                        <group>
                            <field name="supervisor_id" options="{'no_create':True}"/>
                            <field name="manager_id" options="{'no_create':True}"/>
                            <field name="hr_checker_id" options="{'no_create':True}"/>
                            <field name="hr_approver_id" options="{'no_create':True}"/>
                        </group>
                    </group>
                </xpath>
                <!--<field name="parent_id" position="after">-->
                    <!--<field name="supervisor_id"/>-->
                    <!--<field name="is_branch"/>-->
                    <!--<field name="branch_id" attrs="{'invisible':[('is_branch','!=',True)]}" widget="selection"/>-->
                    <!--<field name="is_operation"/>-->
                <!--</field>-->
                <!--<field name="company_id" position="after">-->
                    <!--<field name="inter_company_id" options="{'no_create':True}" domain="[('parent_id', '=', company_id)]"/>-->
                    <!--<field name="hr_checker_id"/>-->
                    <!--<field name="municipality_id" options="{'no_create':True}"/>-->
                    <!--<field name="hr_approver_id"/>-->
                    <!--<field name="area_id" options="{'no_create':True}"/>-->
                <!--</field>-->
                <!--<xpath expr="//field[@name='parent_id']" position="attributes">-->
                    <!--<attribute name="options">{'no_create': 1}</attribute>-->
                <!--</xpath>-->
            </field>
        </record>

        <record id="view_hr_department_search_inherited" model="ir.ui.view">
            <field name="name">view.hr.department.search.inherited</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="branch_id" domain="[('branch_id','!=',False)]"/>
                    <field name="company_id" domain="[('company_id','!=',False)]"/>
                    <field name="supervisor_id" domain="[('supervisor_id','!=',False)]"/>
                    <field name="parent_id" domain="[('parent_id','!=',False)]"/>
                </xpath>
            </field>
        </record>

        <!--inherit from hr add branch-->
        <record id="hr.open_module_tree_department" model="ir.actions.act_window">
            <field name="name">Branch &amp; Departments</field>
        </record>
        <!--inherit from hr add branch-->
        <menuitem
                action="hr.open_module_tree_department"
                id="hr.menu_hr_department_tree"
                parent="hr.menu_hr_root"
                name="Branch &amp; Departments"
                sequence="90"
                groups="hr.group_hr_user"/>

        <!--inherit from recruitment add branch-->
        <record id="hr_recruitment.action_hr_department" model="ir.actions.act_window">
            <field name="name">Branch &amp; Departments</field>
        </record>
        <menuitem id="hr_recruitment.menu_hr_department" name="Branch &amp; Departments"
                  parent="hr_recruitment.menu_hr_recruitment_configuration"
                  action="hr_recruitment.action_hr_department"/>


        <!--HR Employee view-->
        <!--<record id="hr.open_view_employee_list_my" model="ir.actions.act_window">-->
        <!--<field name="view_mode">tree,kanban,form</field>-->
        <!--</record>-->


        <!--tree view-->
        <record id="custom_view_employee_tree" model="ir.ui.view">
            <field name="name">hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="identification_id" string="ID No"/>
                </field>
                <field name="work_phone" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="work_email" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="parent_id" position="before">
                    <field name="supervisor_id" domain="[('supervisor', '=', True)]" options="{'no_create':True}"/>
                </field>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="domain">[('manager', '=', True)]</attribute>
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>
                <field name="name" position="after">
                    <field name="state"/>
                </field>
            </field>
        </record>

        <!--from contract hr view of employee's manager-->
        <record id="custom_employee_view_form2" model="ir.ui.view">
            <field name="name">custom.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_contract.hr_hr_employee_view_form2"/>
            <field name="arch" type="xml">
                <field name="manager" position="attributes">
                    <attribute name="groups">base.group_user</attribute>
                </field>
            </field>
        </record>

        <record id="hrms_employee_view_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <!--state-->
                <xpath expr="/form/sheet" position="before">
                    <header groups="hr.group_hr_user">
                        <button name="start_probationary" string="Set as Probationary" type="object" states="joined" groups="hrms_employee.group_hr_personnel"/>
                        <button name="set_as_employee" string="Set as Regular" type="object" groups="hrms_employee.group_hr_personnel"
                                states="probationary" context="{'employee_id':id}"/>
                        <button name="start_notice_period" string="Start Notice Period" type="object" groups="hrms_employee.group_hr_personnel"
                                states="probationary,employment"/>
                        <button name="relieved" string="Relieved" type="object" states="notice_period" groups="hrms_employee.group_hr_personnel"/>
                        <button name="terminate" string="Terminate" type="object" states="probationary,employment" groups="hrms_employee.group_hr_personnel"/>
                        <button name="action_rehire" string="Rehire" type="object" states="relieved,terminate" groups="hrms_employee.group_hr_personnel"/>
                        <field name="state" widget="statusbar" statusbar_visible="joined,grounding,employment"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//group[@name='active_group']" position="inside">
                    <field name="contract_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">

                    <field name="contractual_identification_id" placeholder="ID No (Contractual)" attrs="{'invisible':[('regular_employees', '=', True)]}"/>
                </xpath>
                <page name="hr_settings" position="after">
                    <page name="history" string="History" groups="hr.group_hr_user">
                        <!--<group name="history_1" string="Stages History" colspan="4">-->
                            <!--<field name="stages_history" nolabel="1">-->
                                <!--<div>-->
                                    <!--<br/>-->
                                    <!--<br/>-->
                                <!--</div>-->
                                <!--<tree>-->
                                    <!--<field name="state"/>-->
                                    <!--<field name="start_date"/>-->
                                    <!--<field name="end_date"/>-->
                                    <!--<field name="duration" sum="Total"/>-->
                                <!--</tree>-->
                            <!--</field>-->
                        <!--</group>-->
                        <group name="history_2" string="Employment History" colspan="4">
                            <field name="employee_history" nolabel="1">
                                <div>
                                    <br/>
                                    <br/>
                                </div>
                                <tree editable="top">
                                    <field name="assigned_date" readonly="1"/>
                                    <field name="end_date" readonly="1"/>
                                    <field name="company_id" readonly="1"/>
                                    <field name="dept_id" readonly="1"/>
                                    <field name="job_id" readonly="1"/>
                                    <field name="emp_classification_id" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                    <!--<field name="remarks"/>-->
                                    <field name="duration" readonly="1"/>
                                    <field name="user_id" readonly="1"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="headcount" string="For Head Count" groups="hr.group_hr_user">
                        <field name="compensation_ids" nolabel="1">
                             <tree editable="top">
                                 <field name="employee_id" invisible="1"/>
                                 <field name="company_id" options="{'no_create':True}"/>
                                 <field name="shared"/>
                                 <field name="date_effect"/>
                             </tree>
                        </field>
                    </page>
                </page>

                <field name="user_id" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>

                <field name="identification_id" position="replace"/>

                <field name="name" position="after">
                    <field name="identification_id" placeholder="ID No"/>
                    <field name="identification" invisible="1"/>
                </field>

                <field name="name" position="attributes">
                    <attribute name="readonly">True</attribute>
                    <attribute name="style">width:100%;</attribute>
                </field>
                <field name="work_email" position="after">
                    <field name="user_check_tick" invisible="1"/>
                </field>
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="create_user" string="Create User Access" type="object" class="oe_highlight"
                                groups="hr.group_hr_manager,hrms_employee.group_hr_personnel" attrs="{'invisible':['|',('user_check_tick','=',True), ('state', 'in', ['joined','relieved','terminate','notice_period'])]}"/>
                        <button name="generate_identification_id" string="Generate Identification" type="object" class="oe_highlight"
                                attrs="{'invisible':['|',('identification', '=', True), ('state', 'in', ['joined','relieved','terminate','notice_period'])]}" groups="hr.group_hr_manager,hrms_employee.group_hr_personnel"/>

                        <button name="print_insurance_waiver" string="Insurance Waiver" type="object" class="oe_inline oe_stat_button"
                                icon="fa-clipboard" help="Add/Edit/Review Insurance Waiver"
                                attrs="{'invisible':[('state', '!=', 'probationary')]}"
                                groups="hr.group_hr_manager,hrms_employee.group_hr_personnel"/>
                    </header>
                    <div class="alert alert-warning text-center o_form_header" attrs="{'invisible': [('state', 'not in', ['relieved', 'terminate'])]}">
                        <!--<a class="close" data-dismiss="alert" href="#" aria-hidden="true">x</a>-->
                        <div attrs="{'invisible': [('state', 'not in', ['relieved', 'terminate'])]}">
                            <strong>The employee is either resigned or terminated from the company.</strong>
                        </div>
                    </div>
                </xpath>
                <!--<field name="work_email" position="attributes">-->
                <!--<attribute name="required">1</attribute>-->
                <!--</field>-->

                <!--public information >general information-->
                <xpath expr="//page[1]" position="attributes">
                    <attribute name="string">Organizational Information</attribute>
                </xpath>
                <xpath expr="//page[1]/group/group" position="before">
                    <group string="General Information">
                        <field name="first_name" required="True"/>
                        <field name="middle_name" required="True"/>
                        <field name="last_name" required="True"/>
                        <field name="suffix"/>
                        <field name="prefix"/>
                        <field name="company_name"/>
                    </group>
                </xpath>

                <xpath expr="//page[1]/group/group[3]" position="replace">
                    <group string="Position">
                        <field name="department_id" options="{'no_create':True}" required="1"/>
                        <field name="job_id" options="{'no_create':True}"/>
                        <field name="emp_classification_id" options="{'no_create':True}" domain="[('parent_id', '!=', False)]"/>
                        <field name="department_municipality_id" options="{'no_create':True}"/>
                        <field name="employee_status_id" options="{'no_create':True}" required="1"/>
                        <field name="regular_employees" invisible="1"/>
                        <field name="parent_id" domain="[('manager', '=', True)]" options="{'no_create':True}"/>
                        <field name="supervisor_id" domain="[('supervisor', '=', True)]" options="{'no_create':True}"/>
                        <field name="coach_id"/>
                        <field name="supervisor"/>
                        <field name="is_bod"/>
                    </group>
                    <group string="Other Information" groups="hrms_employee.group_hr_personnel">
                        <label for="date_hired" string="Date Hired &amp; Separated"/>
                        <div>
                            <field name="date_hired" required="1" class="oe_inline"/> -
                            <field name="date_separated" class="oe_inline"/>
                        </div>
                        <field name="date_regularized"/>
                        <field name="pyrl_date_hired"/>
                        <field name="calendar_id" options="{'no_create':True}" required="1"/>
                        <field name="holiday_paid" invisible="1"/>
                        <field name="applicable_saturday_leave" class="oe_inline"/>
                        days
                        <field name="service_render" invisible="1"/>
                        <field name="is_check_template" invisible="1"/>
                    </group>
                </xpath>

                <!--<field name="calendar_id" position="attributes">-->
                    <!--<attribute name="domain">[('dynamic_sched','=',False)]</attribute>-->
                <!--</field>-->
                <field name="birthday" position="after">
                    <field name="age" invisible="1"/>
                    <field name="birthday_today" invisible="1"/>
                </field>
                <!--<xpath expr="//page[@name='active_group']" position="attributes">-->
                    <!--<attribute name="string">Designated Company &amp; Portal</attribute>-->
                <!--</xpath>-->
                <!--personal information >Employee Address-->
                <xpath expr="//page[2]" position="attributes">
                    <attribute name="groups">hr.group_hr_user,hr_payroll.group_hr_payroll_user</attribute>
                </xpath>
                <xpath expr="//page[2]/group/group[2]" position="replace">
                    <group string="Employee Address">
                        <field name="address_home_id"/>
                        <label for="complete_add" string="Permanent Address"/>
                        <div>
                            <field name="complete_add" placeholder="(House number, Building and Street Name)"/>
                            <br/>
                            <field name="barangay_id" placeholder="Barangay" options="{'no_create':True}"/>
                            <br/>
                            <field name="municipality_id" placeholder="Municipality" invisible="1"/>
                            <br/>
                            <field name="province_id" placeholder="Province" invisible="1"/>
                            <br/>
                            <field name="region_id" placeholder="Region" invisible="1"/>
                        </div>
                    </group>
                </xpath>

                <xpath expr="//page[2]/group/group[1]" position="attributes">
                    <attribute name="string">Citizenship &amp; Bank Details</attribute>
                </xpath>

                <xpath expr="//page[2]/group/group[4]" position="after">

                    <group string="Government Released Identification">
                        <field name="sss_no"/>
                        <field name="hdmf_no"/>
                        <field name="tin_no"/>
                        <field name="ph_no"/>
                        <label for="driving_license_no" string="Driver License"/>
                        <div>
                            <field name="driving_license_no" placeholder="Driving License Number"/>
                            <br/>
                            <field name="driving_restriction" placeholder="Driving Restriction"/>
                            <br/>
                            <field name="driver_license_exp_date" placeholder="Expiry Date"/>
                        </div>

                        <label for="prc_license_no" string="PRC License"/>
                        <div>
                            <field name="prc_license_no" placeholder="PRC License Number"/>
                            <br/>
                            <field name="prc_license_exp_date" placeholder="Expiry Date"/>
                            <br/>
                        </div>

                    </group>
                    <!--<group string="Medical Information">-->
                    <!--<field name="blood_type"/>-->
                    <!--<field name="allergies"/>-->
                    <!--</group>-->
                    <group string="Other Information">
                        <field name="height"/>
                        <field name="weight"/>
                        <field name="religion_id"/>
                    </group>

                </xpath>

                <xpath expr="//page[3]/group/group[1]" position="after">
                    <group string="Notification &amp; Leaves">
                        <field name="hr_checker_id"/>
                        <field name="hr_approver_id"/>
                    </group>
                    <group string="Notification &amp; Leaves Designation">
                        <field name="validator"/>
                        <field name="reviewer"/>
                        <field name="exemption"/>
                    </group>
                    <group string="Recruitment &amp; Resignation Designation">
                        <field name="recruitment_request"/>
                        <field name="prf_approval_stage" attrs="{'invisible':[('recruitment_request', '=', False)], 'required':[('recruitment_request', '=', True)]}"/>
                        <field name="resign_approve"/>
                    </group>
                    <group string="Forms Signatory">
                        <field name="form_signatory"/>
                    </group>
                </xpath>

            </field>
        </record>
        <!--filter-->
        <record model="ir.ui.view" id="hr_employee_stages_inherit_search_view">
            <field name="name">hr.employee.search.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <field name="job_id" position="after">
                    <field name="state"/>
                    <field name="identification_id"/>
                    <filter string="Employees" name="employee" domain="[('state','not in',('terminate','relieved'))]"/>
                    <filter string="Resigned / Terminate" name="resigned" domain="[('state','in',('terminate','relieved'))]"/>
                </field>
                <xpath expr="//group" position="inside">
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                </xpath>
            </field>
        </record>
        <!--kanban-->
        <record model="ir.ui.view" id="hr_employee_stages_inherit_kanban_view">
            <field name="name">hr.employee.kanban.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                <field name="last_login" position="after">
                    <field name="state"/>
                </field>
                <xpath expr="//li[3]" position="after">
                    <li t-if="record.state.raw_value">
                        <field name="state"/>
                    </li>
                </xpath>
            </field>
        </record>
