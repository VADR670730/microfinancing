<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--hr.holiday.line.policy-->
        <record id="hr_holiday_line_policy_tree" model="ir.ui.view">
            <field name="name">hr.holiday.line.policy.tree</field>
            <field name="model">hr.holiday.line.policy</field>
            <field name="arch" type="xml">
                <tree string="Holiday Policy">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="type"/>
                    <field name="rate"/>
                    <field name="holiday_id"/>
                </tree>
            </field>
        </record>

        <record id="hr_holiday_line_policy_form" model="ir.ui.view">
            <field name="name">hr.holiday.line.policy.form</field>
            <field name="model">hr.holiday.line.policy</field>
            <field name="arch" type="xml">
                <form string="Holiday Policy">
                    <sheet string="Holiday Policy Line">
                        <group>
                            <group>
                                <field name="holiday_id"/>
                                <field name="rate"/>
                                <field name="type"/>
                            </group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="policy_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>                    
                </form>
            </field>
        </record>

        <record id="hr_holiday_line_policy_action" model="ir.actions.act_window">
            <field name="name">Holiday Policy Line</field>
            <field name="res_model">hr.holiday.line.policy</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--<menuitem action="hr_holiday_line_policy_action"-->
            <!--id="menu_hr_holiday_line_policy"-->
            <!--parent="hrms_notification.hr_employee_settings"-->
            <!--sequence="4"/>-->
        <!--hr.holiday.policy-->
        <record id="hr_holiday_policy_form" model="ir.ui.view">
            <field name="name">hr.holiday.policy.form</field>
            <field name="model">hr.holiday.policy</field>
            <field name="arch" type="xml">
                <form string="Holiday Policy">
                    <sheet string="Holiday Policy">
                        <group>
                            <h1>
                                <label for="name" string="Name" class="oe_edit_only"/>
                                <field name="name"/>
                            </h1>
                        </group>
                        <group>
                            <group>
                                <field name="date"/>
                            </group>
                            <group></group>
                        </group>
                        <group string="Holiday Policy Lines">
                            <field name="line_ids" nolabel="1" editable="top">
                                <form>
                                    <h1>
                                        <label for="name" string="Name"/>
                                        <field name="name"/>
                                    </h1>
                                    <group>
                                        <group>
                                            <field name="holiday_id"/>
                                            <field name="code"/>
                                            <field name="rate"/>
                                            <field name="type"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_holiday_policy_tree" model="ir.ui.view">
            <field name="name">hr.holiday.policy.tree</field>
            <field name="model">hr.holiday.policy</field>
            <field name="arch" type="xml">
                <tree string="Holiday Policy">
                    <field name="name" />
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="hr_holiday_policy_action" model="ir.actions.act_window">
            <field name="name">Holiday Policy</field>
            <field name="res_model">hr.holiday.policy</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_hr_holiday_policy"
                  action="hr_holiday_policy_action"
                  name="Holiday Policy"
                  parent="hr.menu_human_resources_configuration"
                  sequence="3"/>

        <!-- Contract -->

        <record id="hr_contract_view_form" model="ir.ui.view">
            <field name="name">hr.contract.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit"/>
            <field name="arch" type="xml">
                <data>
                    <field name="schedule_pay" position="after">
                        <field name="holiday_policy_id"/>
                    </field>
                </data>
            </field>
        </record>

    </data>
</odoo>