<odoo>
    <data>
        <record id="employee_monthly_report_form" model="ir.ui.view">
            <field name="name">Employee Monthly Report</field>
            <field name="model">hr.employee.list.handler</field>
            <field name="arch" type="xml">
                <form string="Employee Monthly Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date"/>
                                <field name="state" required="1"/>
                                <field name="hiring_filter" required="1"/>
                            </group>
                            <group>
                                <field name="to_date"/>
                                <field name="filters"/>
                            </group>
                        </group>
                        <group>
                            <field name="company_ids" widget="many2many_tags" attrs="{'invisible':[('filters','!=','by_company')],'required':[('filters','=','by_company')]}" options="{'no_create':True}"/>
                            <field name="branch_ids" attrs="{'invisible':[('filters','!=','by_branch')],'required':[('filters','=','by_branch')]}" domain="[('is_branch','=',True)]" options="{'no_create':True}"/>
                            <field name="department_ids" attrs="{'invisible':[('filters','!=','by_dept')],'required':[('filters','=','by_dept')]}" domain="[('is_branch','=',False)]" options="{'no_create':True}"/>
                        </group>
                        <footer>
                            <button name="print_emp_report"
                                        string="Print"
                                        type="object"
                                        class="btn-primary"/>

                            <button string="Cancel" special="cancel" class="btn-default"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="employee_list_report_action" model="ir.actions.act_window">
            <field name="name">Employee List Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.list.handler</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
			<field name="target">new</field>
        </record>
        <menuitem id="main_hr_employee_report_menu"
                  name="Report"
                  parent="hr.menu_hr_root" sequence="99" groups="hr.group_hr_user"/>
        <menuitem id="employee_list_report_menu" action="employee_list_report_action"
                  parent="main_hr_employee_report_menu" name="Employee List" sequence="1"/>


