<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="gift_check_form_view" model="ir.ui.view">
            <field name="name">hr.gift.check.handler.form</field>
            <field name="model">hr.gift.check.handler</field>
            <field name="arch" type="xml">
                <form string="Gift Check / Rice Incentive">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" placeholder="Fill event here" required="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="event_type" required="1"/>
                                <field name="date_event" required="1"/>
                                <field name="filters" required="1"/>
                            </group>
                            <field name="company_ids" widget="many2many_tags" options="{'no_create':True}" attrs="{'invisible':[('filters', '!=', 'company')]}"/>
                            <field name="department_ids" options="{'no_create':True}" attrs="{'invisible':[('filters', '!=', 'department')]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_check_report"
                                        string="Print"
                                        type="object"
                                        class="btn-primary"/>

                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="gift_check_report_action" model="ir.actions.act_window">
            <field name="name">Gift Check / Rice Incentive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.gift.check.handler</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="employee_gift_check_menu" action="gift_check_report_action"
                  parent="main_hr_employee_report_menu" sequence="2"/>
    </data>
</odoo>