<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="employee_headcount_form" model="ir.ui.view">
            <field name="name">Employee Headcount</field>
            <field name="model">hr.employee.headcount.handler</field>
            <field name="arch" type="xml">
                <form string="Employee Headcount">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date"/>
                                <field name="state" required="1"/>
                            </group>
                            <group>
                                <field name="to_date"/>
                                <field name="filters"/>
                            </group>
                        </group>
                        <group>
                            <field name="company_ids" widget="many2many_tags" options="{'no_create':True}" attrs="{'required':True}"/>
                            <field name="branch_ids" attrs="{'invisible':[('filters','!=','by_branch')]}"
                                   domain="[('is_branch','=',True)]" options="{'no_create':True}"/>
                            <field name="department_ids" attrs="{'invisible':[('filters','!=','by_dept')]}"
                                   domain="[('is_branch','=',False)]" options="{'no_create':True}"/>
                        </group>
                        <footer>
                            <!--<button name="print_emp_headcount_report"-->
                                        <!--string="Print PDF"-->
                                        <!--type="object"-->
                                        <!--class="btn-primary"/>-->

                            <button name="export_xls" type="object" default_focus="1"
                                string="Export Excel" class="oe_highlight"
                                context="{'xls_export':1}" icon="fa-download"/>

                            <button string="Cancel" special="cancel" class="btn-default"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_headcount_action" model="ir.actions.act_window">
            <field name="name">Employee Headcount</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.headcount.handler</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
			<field name="target">new</field>
        </record>

        <menuitem id="employee_headcount_report_menu" action="employee_headcount_action"
                  parent="main_hr_employee_report_menu"/>

        <report
            id="hr_headcount_xlsx"
            model="hr.employee"
            string=" "
            report_type="xlsx"
            name="hrms_employee.hr_employee_headcount_report_xls.xlsx"
            file="hrms_employee.hr_employee_headcount_report_xls.xlsx"
            attachment_use="False"
        />

    </data>
</odoo>