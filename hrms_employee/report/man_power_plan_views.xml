<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="report_manpower_plan_handler_form_view" model="ir.ui.view">
            <field name="name">hr.manpower.plan.handler.form</field>
            <field name="model">hr.manpower.plan.handler</field>
            <field name="arch" type="xml">
                <form string="Manpower Plan Monitoring">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date"/>
                            </group>
                            <group>
                                <field name="to_date"/>
                                <field name="responsible_id" options="{'no_create':True}" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="department_ids" options="{'no_create':True}" required="1" widget="many2many_tags"/>
                        </group>
                        <group string="Comments">
                            <field name="notes" nolabel="1" colspan="2" rowspan="4" placeholder="Please take your notes on here."/>
                        </group>
                        <group>
                            <group string="Approvals">
                                <field name="prepared_by" options="{'no_create':True}" required="1"/>
                                <field name="approved_by1" options="{'no_create':True}" required="1"/>
                                <field name="approved_by2" options="{'no_create':True}"/>
                            </group>
                            <group string="Job Position(s)">
                                <field name="prepared_by_job" required="1"/>
                                <field name="approved_by1_job" required="1"/>
                                <field name="approved_by2_job"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_manpower_report"
                                string="Print"
                                type="object"
                                class="btn-primary"/>

                        <button string="Cancel"
                                special="cancel"
                                class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_manpower_plan_handler_action_view" model="ir.actions.act_window">
            <field name="name">Manpower Plan Monitoring</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.manpower.plan.handler</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_hr_manpower_plan_handler_report"
                  parent="menu_pdf_report_root"
                  action="report_manpower_plan_handler_action_view"
                  sequence="5"/>
    </data>
</odoo>