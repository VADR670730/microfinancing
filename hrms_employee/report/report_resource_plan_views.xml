<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="report_resource_plan_form_view" model="ir.ui.view">
            <field name="name">hr.resource.handler.form</field>
            <field name="model">hr.resource.handler</field>
            <field name="arch" type="xml">
                <form string="Recruitment Plan">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date"/>
                                <field name="year_date" attrs="{'required':[('plan_type', '=', 'yearly')], 'invisible':[('plan_type', '!=', 'yearly')]}"/>
                                <field name="month_date" attrs="{'required':[('plan_type', '!=', 'yearly')], 'invisible':[('plan_type', '=', 'yearly')]}"/>
                                <field name="responsible_id" options="{'no_create':True}" invisible="1"/>
                            </group>
                            <group>
                                <field name="to_date"/>
                                <field name="plan_type" required="1"/>
                                <field name="filters"/>
                            </group>
                        </group>
                        <group>
                            <field name="company_ids" options="{'no_create':True}" attrs="{'invisible':[('filters', '!=', 'company')]}" widget="many2many_tags"/>
                            <field name="partner_ids" options="{'no_create':True}" domain="[('is_company', '=', True), ('owned_company', '=', True)]"
                                    attrs="{'invisible':True}" widget="many2many_tags"/>
                            <field name="department_ids" attrs="{'invisible':[('filters', '!=', 'department')]}" options="{'no_create':True}" domain="[('is_branch', '=', False)]"/>
                            <field name="branch_ids" attrs="{'invisible':[('filters', '!=', 'branch')]}" options="{'no_create':True}" domain="[('is_branch', '=', True)]"/>
                            <field name="job_ids" attrs="{'invisible':[('filters', '!=', 'job')]}" options="{'no_create':True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_resource_report"
                                string="Print"
                                type="object"
                                class="btn-primary"/>

                        <button string="Cancel"
                                special="cancel"
                                class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_resource_plan_action" model="ir.actions.act_window">
            <field name="name">Recruitment and Resourcing Plan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.resource.handler</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_resource_plan_report" parent="menu_pdf_report_root" action="report_resource_plan_action" sequence="3"/>
    </data>
</odoo>