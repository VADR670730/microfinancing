<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hr_probationary_employment_contract_form_view" model="ir.ui.view">
            <field name="name">hr.probationary.employment.contract.form</field>
            <field name="model">hr.probationary.employment.contract</field>
            <field name="arch" type="xml">
                <form string="Probationary Employment Contract">
                    <sheet>
                        <group>
                            <group string="Employee's Information">
                                <field name="employee_id" options="{'no_create':True}" required="1"/>
                                <field name="company_id" options="{'no_create':True}" required="1"/>
                                <field name="emp_valid_id" required="1"/>
                                <field name="emp_valids" attrs="{'required':[('emp_valid_id', '=', 'OTHERS')], 'invisible':[('emp_valid_id', '!=', 'OTHERS')]}"/>
                                <field name="emp_valid_details" required="1"/>
                                <field name="salary" required="1"/>
                            </group>
                            <group string="Signatory's Information">
                                <field name="signatory_id" options="{'no_create':True}" required="1"/>
                                <field name="signatory_job_id" required="1"/>
                                <field name="signatory_valid_id" required="1"/>
                                <field name="signatory_valids" attrs="{'required':[('signatory_valid_id', '=', 'OTHERS')], 'invisible':[('signatory_valid_id', '!=', 'OTHERS')]}"/>
                                <field name="signatory_valid_details" required="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="print_report"
                                        string="Print"
                                        type="object"
                                        class="btn-primary"/>

                            <button string="Cancel" special="cancel" class="btn-default"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_probationary_employment_contract_action" model="ir.actions.act_window">
            <field name="name">Probationary Employment Contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.probationary.employment.contract</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
            <field name="target">new</field>
        </record>


        <record id="view_hr_employee_inherited_form_probationary" model="ir.ui.view">
            <field name="name">hr.employee.form.inherited.probationary</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hrms_employee.hrms_employee_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='generate_identification_id']" position="after">
                    <button name="%(hr_probationary_employment_contract_action)d"
                        type="action" class="oe_inline oe_stat_button"
                        icon="fa-clipboard" help="Add/Edit/Review PEC"
                            states="probationary"
                        groups="hr.group_hr_manager,hrms_employee.group_hr_personnel" string="Probationary Employment Contract(RF)">
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>