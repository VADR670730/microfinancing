<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <!--compress header -->
        <template id="external_layout_custom_contract" inherit_id="report.external_layout" primary="True">
            <xpath expr="//t[@t-call='report.external_layout_header']" position="attributes">
                <attribute name="t-call">hrms_employee.custom_external_layout_header_contract</attribute>
            </xpath>
        </template>
<!--header-->
        <template id="custom_external_layout_header_contract" inherit_id="report.external_layout_header" primary="True">
            <xpath expr="//div[@class='col-xs-9 text-right']" position="replace">
                <div class="col-xs-9 text-right"
                      t-field="company.partner_id"
                      t-field-options='{"widget": "contact", "fields": ["name"], "no_marker": true}'/>
                <div class="col-xs-9 text-right" t-field="company.rml_header1"/>
            </xpath>
            <xpath expr="//div[@name='company_address']" position="replace"/>
        </template>


<template id="report_contract_document">
    <t t-call="hrms_employee.external_layout_custom_contract">
        <div class="page">
            <div class="oe_structure"/>
            <h2>
            <span >Contract # </span>
            <span t-field="doc.name"/>
            </h2>

            <h3><div t-field="doc.employee_id" /></h3>
            <h4 t-if="doc.job_id"><div t-field="doc.job_id"/></h4>

            <br/><br/>

            <div class="row">
                <div t-if="doc.department_id" class="col-xs-3">
                    <h4>Department:</h4>
                    <h5><div t-field="doc.department_id"/></h5>
                </div>
                <div class="col-xs-3">
                    <h4>Contract Type:</h4>
                    <h5><div t-field="doc.type_id"/></h5>
                </div>
                <div class="col-xs-3">
                    <h4>Salary:</h4>
                    <h5><div t-field="doc.wage"/></h5>
                </div>
                <div class="col-xs-3">
                    <h4>Contract Duration:</h4>
                    <h5><div><span t-field="doc.date_start"/> -
                        <span t-field="doc.date_end"/>
                    </div></h5>
                </div>
            </div>
            <br/><br/><br/>
            <table class="table">
                <tbody>
                    <tr t-if="doc.working_hours">
                        <th>Working Schedule</th>
                        <td><span t-field="doc.working_hours"/></td>
                    </tr>
                    <tr t-if="doc.schedule_pay">
