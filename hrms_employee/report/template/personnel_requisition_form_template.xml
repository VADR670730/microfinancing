<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--Personnel Requisition Report-->
        <template id="personnel_requisition_form_template">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<div class="page">
                        <br/>
                        <div class="text-center">
                            <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo" style="max-height: 120px;"/><br/>
                            <p style="font-weight:bold;font-family:Liberation Sans;font-size:18px;" class="text-uppercase" t-esc="o.company_id.name"/>
                            <p style="font-weight:bold;font-family:Liberation Sans;font-size:20px;color:red;">PERSONNEL REQUISITION FORM</p>
                        </div>
                        <div class="col-xs-4 pull-right mt8" name="right_box" style="text-align:center;">
                            <!--<span><img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px;align:left;"/></span>-->
                            <!--&#160;&#160;&#160;<span t-esc="o.name"/><br/>-->
                            &#160;&#160;&#160;<span>HR Form No. 100</span>
                        </div><br/>
                        <span style="font-size:14px;" class="text-uppercase">DATE:  <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%B %d, %Y %I:%M:%S %p')"/></span>
                        <table style="width:100%;text-align:center;font-family:Liberation Sans;border: 2px solid black;">
                            <tr style="font-size:12px;text-align:center;">
                                <th style="font-weight:bold;width:25%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>REQUESTING COMPANY:</span>
                                </th>
                                <th style="width:35%;padding:8px;text-align:left;vertical-align:center;">
                                    <span class="text-uppercase" t-esc="o.company_id.name"/>
                                </th>
                                <th style="font-weight:bold;width:20%;padding:8px;text-align:right;vertical-align:center;">
                                    <span>DATE PREPARED: </span>
                                </th>
                                <th style="width:20%;padding:8px;text-align:left;vertical-align:center;">
                                    <span t-esc="time.strftime('%B %d, %Y', time.strptime(o.date_request,'%Y-%m-%d'))"/>
                                </th>
                            </tr>
                            <tr style="font-size:12px;text-align:center;">
                                <th style="font-weight:bold;width:25%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>POSITION TO BE FILLED: </span>
                                </th>
                                <th style="width:35%;padding:8px;text-align:left;vertical-align:center;">
                                    <span class="text-uppercase" t-esc="o.job_id.name"/>
                                </th>
                                <th style="font-weight:bold;width:20%;padding:8px;text-align:right;vertical-align:center;">
                                    <span>NUMBER NEEDED: </span>
                                </th>
                                <th style="width:20%;padding:8px;text-align:left;vertical-align:center;">
                                    <span t-esc="o.no_of_recruitment"/>
                                </th>
                            </tr>
                        </table>
                        <div class="text-center">
                            <span style="font-weight:bold;font-family:Liberation Sans;"> <span/>JUSTIFICATION:</span>
                        </div>
                        <table style="width:100%;text-align:center;font-family:Liberation Sans;border: 2px solid black;">
                            <tr style="font-size:12px;text-align:center;">
                                <th style="width:100%;padding:8px;text-align:left;vertical-align:center;">
                                    <div class="row">
                                        <div class="col-xs-4">
                                            <span>1. Budget: <span t-esc="o.budget"/> </span>
                                        </div>
                                        <div class="col-xs-4">
                                            <span>   Actual: <span t-esc="o.actual"/> </span>
                                        </div>
                                        <div class="col-xs-4">
                                            <span>   Variance: <span t-esc="o.variance"/> </span>
                                        </div>
                                        <!--<span>1. Budget: <span t-esc="o.budget"/> </span>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;-->
                                        <!--<span>   Actual: <span t-esc="o.actual"/> </span>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;-->
                                        <!--<span>   Variance: <span t-esc="o.variance"/> </span>-->
                                    </div>
                                </th>
                            </tr>
                            <tr style="font-size:12px;text-align:center;">
                                <th style="width:100%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>2. If unbudgeted, give justification: <u><span t-esc="o.unbudget_justification"/></u> </span>
                                </th>
                            </tr>
                        </table>
                        <div class="text-center">
                            <span style="font-weight:bold;font-family:Liberation Sans;"> <span/>POSITION REQUIREMENTS:</span>
                        </div>
                        <table style="width:100%;text-align:center;font-family:Liberation Sans;border: 2px solid black;">
                            <tr style="font-size:12px;ftext-align:center;border: 2px solid black;">
                                <th style="width:25%;padding:8px;text-align:left;vertical-align:center;">
                                    <!--<span>Age : <span t-esc="o.age_from"/> - <span t-esc="o.age_to"/> </span>-->
                                    <span> </span>
                                </th>
                                <th style="width:25%;padding:8px;text-align:left;vertical-align:center;">
                                    <!--<span>Gender : <span class="text-uppercase" t-esc="o.gender"/> </span>-->
                                    <span> </span>
                                </th>
                                <th style="width:50%;padding:8px;text-align:center;vertical-align:center;">
                                    <span> </span>
                                </th>
                            </tr>
                            <tr style="font-size:12px;font-weight:bold;text-align:center;">
                                <th style="width:20%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Education</span>
                                </th>
                                <th style="width:5%;padding:8px;text-align:center;vertical-align:center;">
                                    <span> : </span>
                                </th>
                                <th style="width:75%;padding:8px;text-align:left;vertical-align:center;">
                                    <t t-if="o.education">
                                        <t t-set="string_to_output" t-value="(o.education).split('\n')" />
                                        <t t-foreach="string_to_output" t-as="string_line">
                                            <strong><span style="font-size:14px;font-weight:bold;display:inline-block;white-space: pre-wrap;" t-esc="string_line"/></strong><br />
                                        </t>
                                    </t><br/><br/>
                                    <!--<span t-esc="o.education"/><br/><br/><br/><br/>-->
                                </th>
                            </tr>
                            <tr style="font-size:12px;font-weight:bold;text-align:center;">
                                <th style="width:20%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Work Experience</span>
                                </th>
                                <th style="width:5%;padding:8px;text-align:center;vertical-align:center;">
                                    <span> : </span>
                                </th>
                                <th style="width:75%;padding:8px;text-align:left;vertical-align:center;">
                                    <t t-if="o.work_experience">
                                        <t t-set="string_to_output" t-value="(o.work_experience).split('\n')" />
                                        <t t-foreach="string_to_output" t-as="string_line">
                                            <strong><span style="font-size:14px;font-weight:bold;display:inline-block;white-space: pre-wrap;" t-esc="string_line"/></strong><br />
                                        </t>
                                    </t><br/><br/>
                                    <!--<span t-esc="o.work_experience"/><br/><br/><br/><br/>-->
                                </th>
                            </tr>
                            <tr style="font-size:12px;font-weight:bold;text-align:center;">
                                <th style="width:20%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Technical Knowledge and Skills Required</span>
                                </th>
                                <th style="width:5%;padding:8px;text-align:center;vertical-align:center;">
                                    <span> : </span>
                                </th>
                                <th style="width:75%;padding:8px;text-align:left;vertical-align:center;">
                                    <t t-if="o.skills">
                                        <t t-set="string_to_output" t-value="(o.skills).split('\n')" />
                                        <t t-foreach="string_to_output" t-as="string_line">
                                            <strong><span style="font-size:14px;font-weight:bold;display:inline-block;white-space: pre-wrap;" t-esc="string_line"/></strong><br />
                                        </t>
                                    </t><br/><br/>
                                    <!--<span t-esc="o.skills"/><br/><br/><br/><br/>-->
                                </th>
                            </tr>
                            <tr style="font-size:12px;font-weight:bold;text-align:center;">
                                <th style="width:20%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Desirable Personal Qualifications</span>
                                </th>
                                <th style="width:5%;padding:8px;text-align:center;vertical-align:center;">
                                    <span> : </span>
                                </th>
                                <th style="width:75%;padding:8px;text-align:left;vertical-align:center;">
                                    <t t-if="o.personal_qualification">
                                    <t t-set="string_to_output" t-value="(o.personal_qualification).split('\n')" />
                                    <t t-foreach="string_to_output" t-as="string_line">
                                        <strong><span style="font-size:14px;font-weight:bold;display:inline-block;white-space: pre-wrap;" t-esc="string_line"/></strong><br />
                                    </t>
                                    </t><br/><br/>
                                    <!--<span t-esc="o.personal_qualification"/><br/><br/><br/><br/>-->
                                </th>
                            </tr>
                        </table>
                        <div class="text-center">
                            <span style="font-weight:bold;font-family:Liberation Sans;"> <span/>APPROVALS</span>
                        </div>
                        <table style="width:100%;text-align:center;font-family:Liberation Sans;border: 2px solid black;">
                            <tr style="font-size:12px;text-align:center;">
                                <th style="width:25%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Requested By:</span>
                                </th>
                                <th style="width:25%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Recommended By:</span>
                                </th>
                                <th style="width:25%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Evaluated By:</span>
                                </th>
                                <th style="width:25%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Approved By:</span>
                                </th>
                            </tr>
                            <tr style="font-size:8px;text-align:center;">
                                <th style="width:25%;padding:8px;text-align:center;vertical-align:center;">
                                    <t t-if="o.requester_id">
                                        <span class="text-uppercase" t-esc="o.get_approvers_name(o.requester_id.id)"/><br/>
                                        <span t-esc="o.requester_id.job_id.name"/>
                                    </t>
                                </th>
                                <th style="width:25%;padding:8px;text-align:center;vertical-align:center;">
                                    <t t-if="o.recommend_id">
                                        <span class="text-uppercase" t-esc="o.get_approvers_name(o.recommend_id.id)"/><br/>
                                        <span t-esc="o.recommend_id.job_id.name"/>
                                    </t>
                                </th>
                                <th style="width:25%;padding:8px;text-align:center;vertical-align:center;">
                                    <t t-if="o.evaluate_id">
                                        <span class="text-uppercase" t-esc="o.get_approvers_name(o.evaluate_id.id)"/><br/>
                                        <span t-esc="o.evaluate_id.job_id.name"/>
                                    </t>
                                </th>
                                <th style="width:25%;padding:8px;text-align:center;vertical-align:center;">
                                    <t t-if="o.approve_id">
                                        <span class="text-uppercase" t-esc="o.get_approvers_name(o.approve_id.id)"/><br/>
                                        <span t-esc="o.approve_id.job_id.name"/>
                                    </t>
                                </th>
                            </tr>
                        </table>
                        <table style="width:100%;text-align:center;font-family:Liberation Sans;border: 2px solid black;">
                            <tr style="font-size:12px;text-align:center;border: 2px solid black;">
                                <th style="width:100%;padding:8px;text-align:left;vertical-align:center;">
                                    <span style="font-weight:bold;font-family:Liberation Sans;"> <span/>REMARKS:</span><br/><br/>
                                    <t t-if="o.remarks">
                                        <t t-set="string_to_output" t-value="(o.remarks).split('\n')" />
                                        <t t-foreach="string_to_output" t-as="string_line">
                                            <strong><span style="font-size:14px;font-weight:bold;display:inline-block;white-space: pre-wrap;" t-esc="string_line"/></strong><br />
                                        </t>
                                    </t><br/><br/>
                                    <!--<span style="font-weight:bold;font-family:Liberation Sans;" t-esc="o.remarks"/><br/><br/><br/><br/>-->
                                </th>
                            </tr>
                        </table>
                        <table style="width:100%;text-align:center;font-family:Liberation Sans;border: 2px solid black;">
                            <tr style="font-size:12px;text-align:center;border: 2px solid black;">
                                <th style="width:100%;padding:8px;text-align:center;vertical-align:center;">
                                    <span style="font-weight:bold;font-family:Liberation Sans;"> <span/>FINAL STATUS</span><br/>
                                </th>
                            </tr>
                        </table>
                        <table style="width:100%;text-align:center;font-family:Liberation Sans;border: 2px solid black;">
                            <tr style="font-size:12px;text-align:center;">
                                <th style="width:50%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Position Filled By: </span>
                                    <t t-foreach="o.hired_applicant_line" t-as="line">
                                        <t t-if="line.is_hired">
                                            <span t-esc="line.name"/>,
                                        </t>
                                    </t>
                                </th>
                                <th style="width:50%;padding:8px;text-align:left;vertical-align:center;">
                                    <span>Date: </span>
                                    <t t-foreach="o.hired_applicant_line" t-as="line">
                                        <t t-if="line.is_hired">
                                            <span t-esc="line.date_hired"/>,
                                        </t>
                                    </t>
                                </th>
                            </tr>
                            <tr style="font-size:12px;text-align:center;">
                                <th style="width:100%;padding:8px;text-align:left;vertical-align:center;" colspan="2">
                                    <span>Source: </span>
                                </th>
                            </tr>
                            <tr style="font-size:12px;text-align:center;">
                                <th style="width:50%;padding:8px;text-align:left;vertical-align:center;">
                                    <t t-set="external" t-value="0"/>
                                    <t t-foreach="o.hired_applicant_line" t-as="line">
                                        <t t-if="line.applicant_type == 'external' and line.is_hired">
                                            <t t-set="external" t-value="1"/>
                                        </t>
                                    </t>
                                    <t t-if="external == 1">
                                        <span>EXTERNAL: </span><img t-att-src="'/hrms_employee/static/description/check.png'" style="max-height:12px;"/><br/>
                                    </t>
                                    <t t-if="external == 0">
                                        <span>EXTERNAL: </span><img t-att-src="'/hrms_employee/static/description/unchecked.png'" style="max-height:12px;"/><br/>
                                    </t>
                                    <span>(please refer to the instructions at the back)</span>
                                </th>
                                <th style="width:50%;padding:8px;text-align:left;vertical-align:center;">
                                    <t t-set="internal" t-value="0"/>
                                    <t t-foreach="o.hired_applicant_line" t-as="line">
                                        <t t-if="line.applicant_type == 'internal' and line.is_hired">
                                            <t t-set="internal" t-value="1"/>
                                        </t>
                                    </t>
                                    <t t-if="internal == 1">
                                        <span>INTERNAL: </span><img t-att-src="'/hrms_employee/static/description/check.png'" style="max-height:12px;"/>
                                    </t>
                                    <t t-if="internal == 0">
                                        <span>INTERNAL: </span><img t-att-src="'/hrms_employee/static/description/unchecked.png'" style="max-height:12px;"/>
                                    </t>
                                </th>
                            </tr>
                        </table>
                        <div class="row">
                            <div class="col-xs-5">
                                <span>Copy Distribution: Original : HR Recruitment</span>
                            </div>
                            <div class="col-xs-5">
                                <span>Duplicate: Requesting Party</span>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>